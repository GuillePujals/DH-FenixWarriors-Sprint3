<!DOCTYPE html>
<html>

<%- include ('../partials/head') %>
    <link rel="stylesheet" href="/css/editProduct.css">

    <body>

        <%- include ('../partials/header') %>

            <main class="main">
                <h3>Edición de productos</h3>
                <form action="/products/listado?_method=PUT" method="POST" class="form">
                    <div class="campo">
                        <label for="name">Nombre</label>
                        <input type="text" name="nombre" value="<%= product.nombre %>">
                    </div>
                    <div class="campo">
                        <label for="descrip">Descripción</label>
                        <input type="text" name="descrip" value="<%= product.descrip %>">
                    </div>
                    <div class="campo">
                        <label for="imagen">Imagen</label>
                        <input type="file" name="image">
                    </div>
                    <div class="campo">
                        <label for="categ">Categoría</label>
                        <input type="text" name="categoria" value="<%= product.categoria %>">
                    </div>
                    <div class="campo">
                        <label for="habit">Cantidad de Habitaciones</label>
                        <input type="text" name="cantHabitaciones" value="<%= product.cantHabitaciones %>" class="habit">
                    </div>
                    <div class="campo">
                        <label for="price">Precio</label>
                        <input type="number" name="price" value="<%= product.price %>" class="precio">
                    </div>
                    <div class="campo">
                        <label for="location">Ubicacion</label>
                        <input type="text" name="ubicacion" value="<%= product.ubicacion %>">
                    </div>
                    <div class="campo">
                        <label for="city">Ciudad</label>
                        <input type="text" name="ciudad" value="<%= product.ciudad %>">
                    </div>
                    <div class="campo">
                        <label for="terms">Condiciones</label>
                        <input type="text" name="condiciones" value="<%= product.condiciones %>">
                    </div>
                    <div class="campo">
                        <label for="services">Servicios</label>
                        <input type="text" name="servicios" value="<%= product.servicios %>">
                    </div>

                    <button type="submit" class="button">Actualizar</button>
                </form>


            </main>
            <%- include ('../partials/footer') %>


    </body>

</html>